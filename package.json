{
  "name": "draftjs-filters",
  "version": "3.0.1",
  "description": "Filter Draft.js content to preserve only the formatting you allow",
  "author": "Thibaud Colas",
  "license": "MIT",
  "main": "dist/draftjs-filters.cjs.js",
  "module": "dist/draftjs-filters.esm.js",
  "types": "dist/draftjs-filters.d.ts",
  "sideEffects": false,
  "keywords": [
    "draft-js",
    "draftjs-utils",
    "editor",
    "wysiwyg",
    "rich text",
    "rte"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thibaudcolas/draftjs-filters.git"
  },
  "bugs": {
    "url": "https://github.com/thibaudcolas/draftjs-filters/issues"
  },
  "homepage": "https://thibaudcolas.github.io/draftjs-filters/",
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "browserslist": "> 1%, IE 11",
  "devDependencies": {
    "@commitlint/cli": "18.4.1",
    "@commitlint/config-conventional": "18.4.0",
    "@rollup/plugin-typescript": "11.1.5",
    "@semantic-release/changelog": "6.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@testing-library/react": "^12.1.5",
    "@types/draft-js": "0.10.45",
    "@types/react": "16.14.26",
    "@types/react-dom": "16.9.16",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react-swc": "3.4.1",
    "@vitest/coverage-v8": "0.34.6",
    "coveralls": "3.1.1",
    "draft-js": "0.11.7",
    "draft-js-10": "npm:draft-js@0.10.5",
    "eslint": "8.53.0",
    "immutable": "~3.7.6",
    "jsdom": "22.1.0",
    "normalize.css": "8.0.1",
    "prettier": "2.8.4",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "rollup": "4.4.0",
    "rollup-plugin-dts": "6.1.0",
    "semantic-release": "20.1.3",
    "snapshot-diff": "0.10.0",
    "typescript": "5.2.2",
    "vite": "4.5.0",
    "vitest": "0.34.6"
  },
  "peerDependencies": {
    "draft-js": "^0.10.4 || ^0.11.0 || ^0.12.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build && rollup -c",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch",
    "report:coverage": "open coverage/lcov-report/index.html",
    "report:package": "npm pack --dry-run --loglevel notice 2>&1 >/dev/null | sed -e 's/^npm notice //' | tee build/package.txt",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && prettier --check '**/?(.)*.{md,css,scss,js,ts,tsx,json,yaml,yml,html}'",
    "format": "prettier --write '**/?(.)*.{md,css,scss,js,ts,tsx,json,yaml,yml,html}'",
    "test:ci": "npm run lint -s && npm run build -s && npm run test",
    "prepare": "./.githooks/deploy.sh",
    "prepublishOnly": "npm run build -s"
  }
}
